<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从右往左" />

        <cn.ysf.ratingbar.AndRatingBar
            android:id="@+id/ratingBar3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:rating="4"
            app:bgColor="#dfdfdf"
            app:right2Left="true"
            app:starColor="@color/red"
            app:starSpacing="0dp" />

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="rate:0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义数量" />

            <cn.ysf.ratingbar.AndRatingBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:numStars="8"
                android:rating="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="自定义图标" />

            <cn.ysf.ratingbar.AndRatingBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:isIndicator="true"
                android:rating="2.5"
                app:starDrawable="@drawable/ic_rating_star_flower" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="自定义颜色" />

            <cn.ysf.ratingbar.AndRatingBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:rating="2.5"
                app:starColor="#EFAF27"
                app:starDrawable="@drawable/ic_rating_star_heart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="自定义次要颜色" />

            <cn.ysf.ratingbar.AndRatingBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:rating="2.5"
                app:starColor="#EFAF27"
                app:starDrawable="@drawable/ic_rating_star_heart"
                app:subStarColor="#92D050" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="自定义背景颜色" />

            <cn.ysf.ratingbar.AndRatingBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:rating="2.5"
                app:bgColor="#FFCCCC"
                app:starDrawable="@drawable/ic_rating_star_heart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="自定义背景图片" />

            <cn.ysf.ratingbar.AndRatingBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:rating="2.5"
                app:bgDrawable="@mipmap/star_gray"
                app:starDrawable="@mipmap/star_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="保持图标原色" />

            <cn.ysf.ratingbar.AndRatingBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:rating="2.5"
                app:bgDrawable="@mipmap/rating2"
                app:keepOriginColor="true"
                app:starDrawable="@mipmap/rating" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>