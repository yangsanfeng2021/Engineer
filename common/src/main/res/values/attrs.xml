<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TabView">
        <attr name="itemImg" format="reference" />
        <attr name="itemImgSelected" format="reference" />
        <attr name="itemName" format="string|reference" />
        <attr name="itemTitleColor" format="reference|color" />
        <attr name="itemTitleColorSelected" format="reference|color" />
        <attr name="dotVisible" format="boolean" />
        <attr name="unreadNumVisible" format="boolean" />
        <attr name="unreadNum" format="string" />
        <attr name="itemStateSelected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="HActionBar">
        <attr name="textTitle" format="reference|string" />
        <attr name="textRight" format="reference|string" />
        <attr name="srcBackground" format="reference" />
        <attr name="srcRight" format="reference" />
        <attr name="function">
            <flag name="button_left" value="1" />
            <flag name="button_right" value="2" />
            <flag name="text_title" value="4" />
            <flag name="text_right" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="itemIcon" format="reference" />
        <attr name="iconVisible" format="boolean" />
        <attr name="iconArrowVisible" format="boolean" />
        <attr name="itemTitle" format="reference|string" />
        <attr name="itemContent" format="reference|string" />
        <attr name="itemHintContent" format="reference|string" />
        <attr name="lineVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AnimLogoView">
        <attr name="logoName" format="string" />
        <attr name="autoPlay" format="boolean" />
        <attr name="offsetAnimDuration" format="integer" />
        <attr name="gradientAnimDuration" format="integer" />
        <attr name="gradientColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="verticalOffset" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="showGradient" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AndRatingBar">
        <attr name="starColor" format="color|reference" />
        <attr name="subStarColor" format="color|reference" />
        <attr name="bgColor" format="color|reference" />
        <attr name="starDrawable" format="reference" />
        <attr name="bgDrawable" format="reference" />
        <attr name="keepOriginColor" format="boolean" />
        <attr name="scaleFactor" format="float" />
        <attr name="starSpacing" format="dimension" />
        <attr name="right2Left" format="boolean" />
    </declare-styleable>

</resources>