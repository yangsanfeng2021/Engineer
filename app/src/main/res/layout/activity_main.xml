<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <FrameLayout
        android:id="@+id/containerFl"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1.0"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tabViewLl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tabViewLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <cn.ysf.common.view.TabView
            android:id="@+id/homeTabView"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:itemImg="@mipmap/ic_tab_mine"
            app:itemImgSelected="@mipmap/ic_tab_mine_selected"
            app:itemName="主页"
            app:itemStateSelected="true" />

        <cn.ysf.common.view.TabView
            android:id="@+id/home1TabView"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:itemImg="@mipmap/ic_tab_mine"
            app:itemImgSelected="@mipmap/ic_tab_mine_selected"
            app:itemName="主页2" />

        <cn.ysf.common.view.TabView
            android:id="@+id/home2TabView"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:itemImg="@mipmap/ic_tab_mine"
            app:itemImgSelected="@mipmap/ic_tab_mine_selected"
            app:itemName="主页3" />

        <cn.ysf.common.view.TabView
            android:id="@+id/mineTabView"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:itemImg="@mipmap/ic_tab_mine"
            app:itemImgSelected="@mipmap/ic_tab_mine_selected"
            app:itemName="我的" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>